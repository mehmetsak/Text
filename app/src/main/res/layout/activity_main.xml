<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Switch
        android:id="@+id/P4"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginBottom="217dp"
        android:text="PIN4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P3" />

    <Switch
        android:id="@+id/P2"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginBottom="17dp"
        android:text="PIN2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/P3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P1" />

    <Switch
        android:id="@+id/P1"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="17dp"
        android:text="PIN1"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/P2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/P3"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:text="PIN3"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/P4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P2" />

</androidx.constraintlayout.widget.ConstraintLayout>